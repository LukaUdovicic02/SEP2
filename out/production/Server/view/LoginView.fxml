<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<VBox prefHeight="322.0" prefWidth="460.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginViewController">
   <children>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="450.0">
         <children>
            <Label text="Login">
               <font>
                  <Font size="33.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox prefHeight="155.0" prefWidth="450.0">
         <children>
            <VBox alignment="CENTER" prefHeight="155.0" prefWidth="232.0" spacing="20.0">
               <children>
                  <Label text="Username:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label text="Password:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="133.0" prefWidth="190.0" spacing="20.0">
               <children>
                  <TextField fx:id="usernameField" onAction="#onLogin" />
                  <PasswordField fx:id="passwordField" onAction="#onLogin" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="errorLabel" prefHeight="17.0" prefWidth="400.0" text="error label" textFill="RED">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="72.0" prefWidth="450.0" spacing="150.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onLogin" text="Login">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onRegister" text="Register">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
