<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PlaceOrderController">
   <children>
      <VBox prefHeight="52.0" prefWidth="650.0">
         <children>
            <Label text="Place order  (Buy or sell or both?)">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
      <VBox prefHeight="260.0" prefWidth="650.0">
         <children>
            <HBox prefWidth="200.0">
               <children>
                  <ChoiceBox fx:id="stockChoice" prefHeight="26.0" prefWidth="461.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <BarChart fx:id="ordersChart" prefHeight="236.0" prefWidth="640.0" title="Current orders">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
      <VBox prefWidth="100.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="5.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <children>
                  <Label prefWidth="60.0" text="Price">
                     <HBox.margin>
                        <Insets right="150.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="priceField" prefWidth="171.0" />
                  <Label text="Valuta $£€?" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="5.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <children>
                  <Label prefWidth="60.0" text="Amount">
                     <HBox.margin>
                        <Insets right="150.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="amountField" prefWidth="171.0" />
                  <Label text="Valuta user specified?" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label prefWidth="60.0" text="Total">
                     <HBox.margin>
                        <Insets right="150.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="totalLabel" alignment="CENTER_RIGHT" prefWidth="171.0" text="9001" />
                  <Label text="Valuta not a user story so no" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label prefWidth="60.0" text="Ballance">
                     <HBox.margin>
                        <Insets right="150.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="ballanceLabel" alignment="CENTER_RIGHT" prefWidth="171.0" text="923498687" />
                  <Label text="€" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox prefHeight="32.0" prefWidth="650.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onBuy" text="Buy" />
                  <Button mnemonicParsing="false" onAction="#onSell" text="Sell" />
                  <Button mnemonicParsing="false" onAction="#onBack" text="Back">
                     <HBox.margin>
                        <Insets left="240.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#Portfolio" text="Portfolio" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
