<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="340.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RegisterViewController">
   <children>
      <VBox alignment="CENTER" prefHeight="37.0" prefWidth="340.0">
         <children>
            <Label text="Register">
               <font>
                  <Font size="22.0" />
               </font></Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="155.0" prefWidth="377.0">
         <children>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label prefWidth="110.0" text="Username:" />
                  <TextField fx:id="usernameField" onAction="#onRegister" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label prefWidth="110.0" text="Password:" />
                  <PasswordField fx:id="passwordField" onAction="#onRegister" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="98.0" spacing="5.0">
               <children>
                  <Label prefWidth="110.0" text="Confirm password:" />
                  <PasswordField fx:id="passwordConfirm" onAction="#onRegister" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label prefWidth="110.0" text="Email:" />
                  <TextField fx:id="emailField" onAction="#onRegister" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Label prefWidth="110.0" text="Email confirm:" />
                  <TextField fx:id="emailConfirm" onAction="#onRegister" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <VBox prefHeight="69.0" prefWidth="336.0">
         <children>
            <Label fx:id="errorLabel" alignment="TOP_LEFT" prefHeight="60.0" prefWidth="326.0" text="error label" textFill="RED" wrapText="true">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="450.0" spacing="50.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onBack" text="Back" />
            <Button mnemonicParsing="false" onAction="#onRegister" text="Register" />
         </children>
      </HBox>
   </children>
</VBox>
