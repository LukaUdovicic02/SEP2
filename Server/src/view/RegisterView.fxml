<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="339.0" prefWidth="488.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RegisterViewController">
   <children>
      <VBox>
         <children>
            <Label text="Register" />
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="155.0" prefWidth="233.0">
         <children>
            <HBox>
               <children>
                  <Label text="Username:" />
                  <TextField fx:id="usernameField" onAction="#onRegister" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Password:" />
                  <PasswordField fx:id="passwordField" onAction="#onRegister" />
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="98.0">
               <children>
                  <Label text="Confirm password:" />
                  <PasswordField fx:id="passwordConfirm" onAction="#onRegister" />
               </children>
            </HBox>
            <HBox prefWidth="200.0">
               <children>
                  <Label text="Email:" />
                  <TextField fx:id="emailField" />
               </children></HBox>
            <HBox prefWidth="200.0">
               <children>
                  <Label text="Confirm email" />
                  <TextField fx:id="emailConfirm" />
               </children></HBox>
         </children>
      </VBox>
      <VBox>
         <children>
            <Label fx:id="errorLabel" text="error label" textFill="RED">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="450.0" spacing="150.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onBack" text="Back" />
            <Button mnemonicParsing="false" onAction="#onRegister" text="Register" />
         </children>
      </HBox>
   </children>
</VBox>
